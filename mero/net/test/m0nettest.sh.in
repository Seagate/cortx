#!/usr/bin/env bash

# Small wrapper to run net-test console, which depends on m0mero module

if [ "$(id -u)" -ne 0 ]; then
    echo "Must be run as root"
    exit 1
fi

# Assign a node uuid.
# See lib/linux_kernel/kuuid.c:m0_param_node_uuid_get()
NODE_UUID="abcdef01-2345-6789-0123-456789ABCDEF"

. @abs_top_srcdir@/m0t1fs/linux_kernel/st/common.sh

unload_all() {
    modunload
    modunload_m0gf
}
trap unload_all EXIT

modprobe_lnet
modload_m0gf
modload || exit $?

@abs_top_srcdir@/net/test/user_space/m0nettest "$@"
