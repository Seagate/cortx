	@rm -vf $(top_builddir)/modules.order
	@find $(top_builddir) \
		\( -name .git -o -name .libs -o -name extra-libs \) -prune \
		-o \( -name '*.o' -o -name '*.ko' -o -name '.*.cmd' \
		      -o -name '*.ko.*' -o -name '.*.d' -o -name '.*.tmp' \
		      -o -name '*.mod.c' \
