#
# RPM targets ----------------------------------------- {{{2
#

DIST_FILE    = $(distdir).tar.gz
RPMBUILD_DIR = $(HOME)/rpmbuild
RPM_SRC_DIR  = $(RPMBUILD_DIR)/SOURCES
RPM_SPEC_DIR = $(RPMBUILD_DIR)/SPECS
RPM_MOCK_DIR = $(RPMBUILD_DIR)/MOCK-RPMS

# Some developers keep Mero sources on a vmhgfs partition (VMware sharing).
# In this case $(DIST_FILE) and mero.spec will be owned by host OS' user,
# and rpmbuild will fail with "Bad owner/group" message. Since vmhgfs does
# not permit changing owner/group of a file, we move the files out of vmhgfs
# as a workaround.
.PHONY: __rpm_pre
__rpm_pre:
	$(MAKE) dist

	[ -d $(RPM_SRC_DIR) ] || $(MKDIR_P) $(RPM_SRC_DIR)
	mv $(DIST_FILE) $(RPM_SRC_DIR)
	chown $$(id -u):$$(id -g) $(RPM_SRC_DIR)/$(DIST_FILE)

	[ -d $(RPM_SPEC_DIR) ] || $(MKDIR_P) $(RPM_SPEC_DIR)
	cp eos-core.spec mero.spec $(RPM_SPEC_DIR)/
	chown $$(id -u):$$(id -g) $(RPM_SPEC_DIR)/{eos-core,mero}.spec

.PHONY: __rpm_post
__rpm_post:
	rm -f $(RPM_SRC_DIR)/$(DIST_FILE) $(RPM_SPEC_DIR)/{eos-core,mero}.spec

.PHONY: __rpm
__rpm:
	rpmbuild -ba $(RPM_SPEC_DIR)/eos-core.spec \
		 --define "_topdir $(RPMBUILD_DIR)" \
		 $(RPMBUILD_FLAGS)

.PHONY: __rpm_srpm
__rpm_srpm:
	rpmbuild -bs $(RPM_SPEC_DIR)/eos-core.spec \
		 --define "_topdir $(RPMBUILD_DIR)" \
		 $(RPMBUILD_FLAGS)

.PHONY: __rpm_tests
__rpm_tests:
	rpmbuild -bb $(RPM_SPEC_DIR)/eos-core.spec \
		 --define "_topdir $(RPMBUILD_DIR)" \
		 --with ut \
		 $(RPMBUILD_FLAGS)

.PHONY: __rpm_mock
__rpm_mock:
	mock -r mero-mock.cfg --resultdir $(RPM_MOCK_DIR) --init
	mock -r mero-mock.cfg --resultdir $(RPM_MOCK_DIR) --buildsrpm \
		--spec $(RPM_SPEC_DIR)/eos-core.spec \
		--sources $(RPM_SRC_DIR) \
		--no-clean --no-cleanup-after
	mock -r mero-mock.cfg --resultdir $(RPM_MOCK_DIR) --rebuild \
		$(RPM_MOCK_DIR)/mero-*.src.rpm \
		--no-clean --no-cleanup-after

# __rpm_tests should be built before __rpm, because __rpm_tests creates a dummy
# mero.rpm package, which would otherwise overwrite normal mero.rpm, created by
# __rpm
.PHONY: rpms
rpms:
	$(MAKE) __rpm_pre
	$(MAKE) __rpm_tests
	$(MAKE) __rpm
	$(MAKE) __rpm_srpm
	$(MAKE) __rpm_post

.PHONY: rpms-notests
