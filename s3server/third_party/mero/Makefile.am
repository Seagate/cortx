	@echo -n 'Checking make files... '
	@XC=`echo "$(mero_libmero_la_SOURCES)" | grep -Po '\S+_xc\.[ch]'` ; \
		if [[ -n $$XC ]] ; then \
			echo FAIL; \
			echo "ERROR: xcode files in mero_libmero_la_SOURCES makefile variable:"; \
			echo "$$XC"; \
			echo "Please, move them into nodist_mero_libmero_la_SOURCES var instead."; \
			exit 1; \
		fi
	@XC=`echo "$(EXTRA_DIST)" | grep -Po '\S+_xc\.[ch]'` ; \
		if [[ -n $$XC ]] ; then \
			echo FAIL; \
			echo "ERROR: xcode files found in EXTRA_DIST makefile variable:"; \
			echo "$$XC"; \
			echo "Please, remove them from EXTRA_DIST."; \
			exit 1; \
		fi
	@echo 'OK'

